{% extends 'layouts/layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block main %}
    <div class="container border rounded pt-5 px-5 mt-5">
            <div class="d-flex justify-content-center">
                <div class="col-12 col-md-6">
                    <h2 class="">{{ 'sign_up_for_free' | trans }}</h2>
                    <p>{{ 'allready_have_an_account_?' | trans }} <a href="#">{{ 'login' | trans }}</a></p>

                    {% if errors is defined %}
                        {% for error in errors %}
                            <div class="alert alert-danger">
                                {{ error | raw }}
                            </div>
                        {% endfor %}
                    {% endif %}

                    {{ form(form) }}

                    <p class="pt-5">{{ 'by_joining_,_you_agree_to_the' | trans }} <a href="#">{{ 'terms' | trans }}</a> {{ 'and' | trans }} <a href="#">{{ 'privacy_policy' | trans }}</a></p>

                </div>
            </div>
        </div>
{% endblock %}
