{% extends 'layouts/layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block main %}
{{ dump(app.request.session) }}
    <div class="container border rounded pt-5 px-5 mt-5">
            <div class="d-flex justify-content-center">
                <div class="col-12 col-md-6">
                    <h2 class="">Sign up for free</h2>
                    <p>Allready have an account? <a href="#">Login</a></p>

                    {% if errors is defined %}
                        {% for error in errors %}
                            <div class="alert alert-danger">
                                {{ error | raw }}
                            </div>
                        {% endfor %}
                    {% endif %}

                    {{ form(form) }}

                    <p class="pt-5">By joining, you agree to the <a href="#">Terms</a> and <a href="#">Privacy Policy</a></p>

                </div>
            </div>
        </div>

{% endblock %}
