{% extends 'layouts/layout.html.twig' %}

{% block main %}
    <h1 class="w-75">{{ pimcore_input('header', {'placeholder' : 'Heading'}) }}</h1>

    <div class="mt-3">
        {{ pimcore_video('video', {
            height: 417,
            attributes : {
                class : 'border border-5 rounded'
            }
        }) }}
    </div>

    {{ pimcore_areablock("startPageAreablock", {
            "allowed": ["tool-card"],
            "limits": {
                "tool-card": 1
            }
        })
    }}
{% endblock %}
