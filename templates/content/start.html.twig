{% extends 'layouts/layout.html.twig' %}

{% block main %}
    {# Page title #}
    <h1 class="w-75">{{ pimcore_input('header', {'placeholder': 'Heading'}) }}</h1>

    {# Page Paragraph #}
    <p class="mb-4">{{ pimcore_input('Paragraph', {'placeholder': 'Paragraph'}) }}</p>

    {# Video #}
    <div class="bg-secondary rounded-3">
        {{ pimcore_video('video', {
            height: 417,
            attributes : {
                class : 'border border-5 rounded-3'
            }
        }) }}
    </div>

    {# Tools #}
    <div class="mt-3">
        <h4 class="ps-2">{{ pimcore_input('toolsTitle', {'placeholder': 'Tools title'}) }}</h4>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 gx-5 gb-5">
            {{ pimcore_areablock("startPageAreablock", {
                "allowed": ["tool-cards"],
                "limits": {
                    "tool-cards": 1
                },
            }) }}
        </div>
    </div>
{% endblock %}
