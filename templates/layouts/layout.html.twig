<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    {# Required meta tags #}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% apply spaceless %}
        {# Add global stylesheets and scripts outside of any blocsk to add them to the helpers before any others assets are added #}
        {# Useing the view helper to have cache buster functionality #}
        {# Bootstrap - CSS #}
        {% do pimcore_head_link().appendStylesheet('https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css',null,null,{integrity:"sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x",crossorigin:"anonymous"}) %}
        {# Optional CSS #}
        {% do pimcore_head_link().appendStylesheet(asset('static/css/main.css')) %}

        {# Bootstrap Bundle with Popper - JS #}
        {% do pimcore_head_script().appendFile('https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js',null,null,{ integrity:"sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4",crossorigin:"anonymous"}) %}
        {# jQuery - JS #}
        {% do pimcore_head_script().appendFile('https://code.jquery.com/jquery-3.6.0.min.js') %}
        {# Optional JavaScript #}
        {% do pimcore_head_script().appendFile(asset('static/js/main.js')) %}
        {% do pimcore_head_script().appendFile(asset('static/js/jquery.js')) %}

        {# Document #}
        {% if not document is defined or not document %}
            {% if doc_parent_id is defined %}
                {% set document = pimcore_document(doc_parent_id) %}
            {% else %}
                {% set document = pimcore_document(1) %}
            {% endif %}
        {% endif %}

        {% if document is instanceof('\\Pimcore\\Model\\Document\\Link') %}
            {# @var document \Pimcore\Model\Document\Link #}
            {% set document = document.getObject() %}
        {% endif %}

        {# Title #}
        {% if document.getTitle() is not empty %}
            {% do pimcore_head_title().set(document.getTitle()) %}
        {% endif %}
        {% do pimcore_head_title().append('MeetYourself') %}
        {% do pimcore_head_title().setSeparator(' : ') %}

        {% if document.getDescription() is not empty %}
            {% do pimcore_head_meta().setDescription(document.getDescription()) %}
        {% endif %}
    {% endapply %}

    {# Using the deferred extension here to make sure this block is rendered after all helper calls #}
    {% block layout_head_meta deferred %}
    {{ pimcore_head_title() }}
    {{ pimcore_head_meta() }}
    {% endblock %}

    {% block head_stylesheets deferred %}
    {{ pimcore_head_link() }}
    {% endblock %}
</head>

<body>
{% block content %}
    <div class="container">
        <div class="row">
            <header class="col-12 col-lg-3 sticky-top shadow p-0 rounded-bottom bg-body">
                {% block header %}
                    {% include 'layouts/includes/header.html.twig' %}
                {% endblock %}
            </header>
            <main role="main" class="col-12 col-lg-9 pt-5">
                {% block main %}
                    {% include 'layouts/includes/main.html.twig' %}
                {% endblock %}
            </main>
        </div>
    </div>
    <footer class="container-fluid container-lg py-5 rounded bg-light">
        {% block footer %}
            {# include a document-snippet - in this case the footer document #}
            {{ pimcore_inc(document.getProperty('footer')) }}
        {% endblock %}
    </footer>
{% endblock %}

{# output scripts added before #}
{% block head_scripts deferred %}
{{ pimcore_head_script() }}
{% endblock %}

{% block inlinescripts deferred %}
{{ pimcore_inline_script() }}
{% endblock %}
</body>
</html>
