{# Carousel/Slideshow #}
{% if tool.screenshots %}
    <div class="ms-4" style="width: 100%; overflow-x:auto">
        <div style="width: 700px">
            <div class="row gx-4">

                {% for img in tool.screenshots %}
                    <div class="col">
                        <img src="{{ img.screenshot.data }}" height="393" class="w-100 rounded-3" alt="{{ img.screenshot.data.filename }}">
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
    {% endif %}

