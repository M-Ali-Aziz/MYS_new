{# Video #}
{% if tool.embedLoom %}
    <h2 class="text-center mt-5">{{ 'how_does_it_work_?' | trans }}</h2>
    <div class="ratio ratio-16x9 mt-4">
        {{ tool.embedLoom | raw }}
    </div>
{% elseif tool.video %}
    <h2 class="text-center mt-5">{{ 'how_does_it_work_?' | trans }}</h2>
    <div class="ratio ratio-16x9 mt-4">
        {% if tool.video.type == 'asset' %}
            <video poster="{{ tool.video.poster }}" title="{{ tool.video.title }}" controls="controls" class="rounded-3">
                <source type="video/mp4" src="{{ tool.video.data }}">
            </video>
        {% else %}
            <iframe
                src="{{ video_base_url[tool.video.type] ~ tool.video.data }}"
                title="{{ tool.video.title }}"
                class="rounded-3"
                frameborder="0">
            </iframe>
        {% endif %}
    </div>
{% endif %}

{# About this tool #}
{% if tool.aboutTool %}
    <h3 class="mt-5">{{ 'description'|trans }}</h3>
    <p>{{ tool.aboutTool }}</p>
{% endif %}


{# Sticky box #}
<div class="fixed-bottom sticky-top bg-body mt-3 p-3 g-0 rounded-3 shadow-lg" style="bottom: 20px;">
    <div>
        {% if tool.image %}
            <img class="float-start rounded-3 me-3" width="65" height="45" src="{{ tool.image }}" alt="{{ tool.image.filename }}">
        {% endif %}
        <h4 class="m-0">{{ tool.title }}</h4>
        {% if tool.creator %}
            <p class="m-0 mys__description-font">{{ 'by' | trans }} {{ tool.creator.name }}</p>
        {% endif %}
    </div>
    <div class="row mt-3 align-items-center h-100">
        <div class="col-3">
            <h4 class="ps-3 m-0">{{ 'free' | trans }}</h4>
        </div>
        <div class="col-9">
            <a role="button" class="btn btn-outline-primary rounded-pill float-end" href="#" aria-label="{{ 'try_tool' | trans }}">
                <h3 class="m-0">
                    {{ 'try_tool' | trans }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-right ms-2" viewBox="0 0 16 16">
