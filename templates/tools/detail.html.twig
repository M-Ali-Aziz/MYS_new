{% extends 'layouts/layout.html.twig' %}

{% block main %}
{# Background color + image#}
<div class="d-md-none position-relative top-0 start-50 translate-middle min-vw-100" style="height: 169px;{% if tool.backgroundColor.hex is defined %}background-color: {{ tool.backgroundColor.hex }};{% endif %}">
    {% if tool.image %}
        <div class="position-absolute top-100 start-50 translate-middle">
            <img class="rounded-3" width="253" height="210" src="{{ tool.image }}" alt="{{ tool.image.filename }}">
        </div>
    {% endif %}
</div>
<div class="d-none d-md-block rounded-3 position-relative" style="height: 229px;{% if tool.backgroundColor.hex is defined %}background-color: {{ tool.backgroundColor.hex }};{% endif %}">
    {% if tool.image %}
        <div class="position-absolute top-50 start-50 translate-middle mt-4">
            <img class="rounded-3" width="336" height="238" src="{{ tool.image }}" alt="{{ tool.image.filename }}">
        </div>
    {% endif %}
</div>

{# Title + Description #}
<h2 class="text-center mt-5">{{ tool.title }}</h2>
<p class="text-center">{{ tool.description }}</p>
