{% block main %}
<div class="d-flex justify-content-center text-center">
    <div class="col-12 col-md-6">
        <h2 class="">{{ 'sign_up_for_free'|trans }}</h2>
        <p>{{ 'allready_have_an_account_?'|trans }} <a
                href="{{ path('account_login') }}">{{ 'login'|trans }}</a></p>

        {% if errors is defined %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error | raw }}
                </div>
            {% endfor %}
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'px-3 p-md-0 mt-4'}}) }}
            {{ form_row(form.email, {
                label: false,
                attr: {
                    'placeholder': 'type_email'|trans,
                    'class': 'form-control w-100 border-0 rounded-0 border-bottom mys__border-violet mb-3 pb-2'
                },
            }) }}

            {{ form_row(form.firstname, {
                label: false,
                attr: {
                    'placeholder': 'name'|trans,
                    'class': 'form-control w-100 border-0 rounded-0 border-bottom mys__border-violet mb-3 pb-2'
                },
            }) }}

            {{ form_row(form.lastname, {
                label: false,
                attr: {
                    'placeholder': 'lastname'|trans,
                    'class': 'form-control w-100 border-0 rounded-0 border-bottom mys__border-violet mb-3 pb-2'
                },
            }) }}

            {% if form.password %}
                {{ form_row(form.password, {
                    label: false,
                    attr: {
                        'placeholder': 'choose_password'|trans,
                        'class': 'form-control w-100 border-0 rounded-0 border-bottom mys__border-violet mb-3 pb-2'
                    },
                }) }}
            {% endif %}

            <div class="mt-4">
                {{ form_row(form._submit, {
                    'label': 'join'|trans,
                    attr: {
                        'class': 'btn py-2 ps-4 pe-5 border rounded-pill mys__arrow-right-after'
                    },
                }) }}
            </div>

        {{ form_end(form) }}

        <p class="mt-5 mys__description-font">
            {{ 'by_joining_,_you_agree_to_the'|trans }}
            <a href="#">{{ 'terms'|trans }}</a>
            {{ 'and'|trans }}
            <a href="#">{{ 'privacy_policy'|trans }}</a>
        </p>

    </div>
</div>
{% endblock %}
