{% extends 'layouts/layout.html.twig' %}

{% block main %}
<div class="d-flex justify-content-center text-center">
    <div class="col-12 col-md-6">
        <h2>{{ 'set_a_new_password' | trans }}</h2>

        <form class="px-3 p-md-0 mt-5" method="POST">
            <input type="password" id="password" name="password" required class="form-control w-100 border-0 rounded-0 border-bottom mys__border-violet" placeholder="{{ 'new_password' | trans }}">
            <input type="hidden" id="token" name="token" value="{{ token }}" />

            <button type="submit" id="_submit" name="_submit" class="btn btn-primary py-2 px-4 border rounded-pill mt-5">{{ 'reset_my_password' | trans }}</button>
        </form>
    </div>
</div>
{% endblock %}
