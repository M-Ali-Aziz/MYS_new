{% extends 'layouts/layout.html.twig' %}

{% block main %}
<div class="d-flex justify-content-center text-center">
    <div class="col-12 col-md-6">
        <h2>{{ 'reset_password' | trans }}</h2>
        <p>{{ 'reset_password_text' | trans }}</p>

        <form class="px-3 p-md-0 mt-4" method="POST">
            <input type="email" id="email" name="email" required class="form-control w-100 border-0 rounded-0 border-bottom mys__border-violet" placeholder="{{ 'email'|trans }}" value="{{ email }}" />

            <button type="submit" id="_submit" name="_submit" class="btn btn-primary py-2 px-4 border rounded-pill mt-5">{{ 'reset_my_password' | trans }}</button>
        </form>
    </div>
</div>
{% endblock %}
