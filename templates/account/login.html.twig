{% extends 'layouts/layout.html.twig' %}

{% block main %}
<div class="d-flex justify-content-center text-center">
    <div class="col-12 col-md-6">
        <h2 class="">{{ 'login'|trans }}</h2>
        <p>{{ 'dont_have_an_account_?'|trans }} <a href="{{ path('account_register')}}">{{ 'join_for_free'|trans }}</a></p>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.getMessage() }}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class': 'px-3 p-md-0 mt-4'}}) }}
            {{ form_row(form._username, {
                label: false,
                attr: {
                    'placeholder': 'type_email'|trans,
                    'class': 'form-control w-100 border-0 rounded-0 border-bottom mys__border-violet mb-3 pb-2'
                },
            }) }}
            {{ form_row(form._password, {
                label: false,
                attr: {
                    'placeholder': 'password'|trans,
                    'class': 'form-control w-100 border-0 rounded-0 border-bottom mys__border-violet pb-2'
                },
            }) }}

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="text-end mb-2">
                <a class="text-dark mys__description-bold-font" href="{{ path('account_password_send_recovery') }}">{{ 'forgot_your_password_?'|trans }}</a>
            </div>

            <div class="custom-control custom-checkbox text-start">
                <input name="_remember_me" type="checkbox" class="custom-control-input" id="remember_me" checked>
                <label class="custom-control-label" for="remember_me">{{ 'remember_me'|trans }}</label>
            </div>


            <div class="mt-4">
                {{ form_row(form._submit, {
                    'label': 'login'|trans,
                    attr: {
                        'class': 'btn py-2 ps-4 pe-5 border rounded-pill mys__arrow-right-after'
                    },
                }) }}
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
